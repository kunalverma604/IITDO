<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/color_white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/informational_head"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_white"
        tools:context=".activities.InformationalActivity">

        <ImageView
            android:id="@+id/activity_informational_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/activity_informational_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_15sdp"

            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/chivo_regular"
            android:lineSpacingExtra="2dp"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:id="@+id/activity_coming_soon_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center"
            android:fontFamily="@font/chivo_regular"
            android:gravity="center_vertical|center_horizontal"
            android:text="COMING SOON"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_18sdp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>